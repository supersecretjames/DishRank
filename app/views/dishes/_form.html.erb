<%= form_for(@dish) do |f| %>
	<%= f.label :restaurant, "Restaurant" %>
	<%= collection_select(:restaurant, :restaurant_id, Restaurant.all, :id, :name, {:selected => params[:restaurant_id]}) %>

	<%= f.label :dish_type, "Dish Type" %>
	<%= collection_select(:dish_type, :dish_type_id, DishType.all, :id, :name)%>
	
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.label :price %>
	<%= f.number_field :price %>
	<br>
	<%= f.submit %>
<% end %>